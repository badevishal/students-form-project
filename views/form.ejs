<%- include('./partials/header.ejs') %> <%- include('./partials/navbar.ejs') %>

<h1 class="heading">Student Information Form</h1>
<div class="w-50 mx-5">
  <form method="post">
    <div class="mb-3">
      <label for="rollNo" class="form-label">Roll No</label>
      <input type="number" min="11400" max="11475" class="form-control" id="rollNo" name="rollNo" />
    </div>

    <div class="mb-3">
      <label for="firstName" class="form-label">First Name</label>
      <input type="text" maxlength="15" class="form-control" id="firstName" name="firstName" />
    </div>

    <div class="mb-3">
      <label for="lastName" class="form-label">Last Name</label>
      <input type="text" maxlength="15" class="form-control" id="lastName" name="lastName" />
    </div>

    <div class="mb-3">
      <label for="age" class="form-label">Age</label>
      <input type="number" min="18" class="form-control" id="age" name="age" />
    </div>

    <div class="mb-3">
      <label for="gender" class="form-label">Gender</label>
      <select name="gender" id="gender">
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="branch" class="form-label">Branch</label>
      <select name="branch" id="branch">
        <option value="">Select Branch..</option>
        <option value="Mechanical Engg">Mechanical Engg</option>
        <option value="Civil Engg">Civil Engg</option>
        <option value="Electrical Engg">Electrical Engg</option>
        <option value="Electronic Engg">Electronic Engg</option>
        <option value="Computer Engg">Computer Engg</option>
        <option value="Information Technology">Information Technology</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="percent" class="form-label">Parcentage</label>
      <input type="text" class="form-control" id="percent" name="percent" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<%- include('./partials/footer.ejs') %>
