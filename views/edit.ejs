<%- include('./partials/header.ejs') %>

<h1 class="heading"> Update or Edit Student Information</h1>
<div class="w-50 mx-5">
  <form method="post" action="/update/<%= result._id %>">
    <div class="mb-3">
      <label for="rollNo" class="form-label">Roll No</label>
      <input type="number" min="11400" max="11475" class="form-control" name="rollNo" id="rollNo" value="<%= result.rollNo %>" />
    </div>

    <div class="mb-3">
      <label for="firstName" class="form-label">First Name</label>
      <input type="text" maxlength="15" class="form-control" name="firstName" id="firstName" value="<%= result.firstName %>" />
    </div>

    <div class="mb-3">
      <label for="lastName" class="form-label">Last Name</label>
      <input type="text" maxlength="15" class="form-control" name="lastName" id="lastName" value="<%= result.lastName %>" />
    </div>

    <div class="mb-3">
      <label for="age" class="form-label">Age</label>
      <input type="number" min="18" class="form-control" name="age" id="age" value="<%= result.age %>" />
    </div>

    <div class="mb-3">
      <label for="gender" class="form-label">Gender</label>
      <select name="gender" id="gender" required>
        <option value="">Select Branch..</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="branch" class="form-label">Branch</label>
      <select name="branch" id="branch" required>
        <option value="">Select Branch..</option>
        <option value="Mechanical Engg">Mechanical Engg</option>
        <option value="Civil Engg">Civil Engg</option>
        <option value="Electrical Engg">Electrical Engg</option>
        <option value="Electronic Engg">Electronic Engg</option>
        <option value="Computer Engg">Computer Engg</option>
        <option value="Information Technology">Information Technology</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="percent" class="form-label">Parcentage</label>
      <input type="text" class="form-control" name="percent" id="percent" value="<%= result.percent %>" />
    </div>
<div style="display: flex; flex-direction: row; justify-content: space-evenly;">

  <button type="submit" class="btn btn-primary">Update</button>
</form>
<form action="/data" method="get">
  <button type="submit" class="btn btn-primary">Cancel</button>
</form>
</div>
</div>

<%- include('./partials/footer.ejs') %>